<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Assignment2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Functional / component-specific roles -->
        <item name="gridColor">@color/gray_dim</item>
        <item name="cellActiveColor">@color/home_cell_bg</item>
        <item name="cellButtonActiveBackground">@color/home_cell_bg</item>
        <item name="cellButtonInactiveBackground">@color/home_cell_bg_light</item>
        <item name="cellButtonActiveText">@color/white</item>
        <item name="cellButtonInactiveText">@color/black</item>
        <item name="homeCellActiveBackground">@color/home_cell_bg_light</item>
        <item name="homeCellInactiveBackground">@color/home_cell_bg</item>
        <item name="homeCellTextColor">@color/white</item>
        <item name="colorSurface">@color/home_cell_bg</item>
        <item name="colorSurfaceVariant">@color/home_cell_bg_light</item>


        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>



    </style>
    <style name="Theme.Assignment2.NoActionBar" parent="Theme.Assignment2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Assignment2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Assignment2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CellStyleHome">
        <item name="android:layout_width">0dp</item> <!-- Will use layout_weight in LinearLayout -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/home_cell_text_color</item>
        <item name="android:background">@color/home_cell_inactive_background</item>
    </style>
    <style name="CellRowStyleHome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">2dp</item> <!-- Optional spacing between rows -->
    </style>
</resources>
